<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".Choose_A_Accelerometer"
    tools:deviceIds="wear">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCELEROMETER"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="45dp"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <ToggleButton
            android:id="@+id/xBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="X AXIS"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="55dp"
            android:textAlignment="center"
            android:checked="false"
            android:layout_centerHorizontal="true"
            android:textOff="X Axis (OFF)"
            android:textOn="X AXIS (ON)"/>

        <ToggleButton
            android:id="@+id/yBtn"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Y AXIS"
            android:layout_marginLeft="55dp"
            android:textAlignment="center"
            android:checked="false"
            android:layout_centerHorizontal="true"
            android:textOff="Y AXIS (OFF)"
            android:textOn="Y AXIS (ON)"/>

        <ToggleButton
            android:id="@+id/zBtn"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Z AXIS"
            android:layout_marginLeft="55dp"
            android:textAlignment="center"
            android:checked="false"
            android:layout_centerHorizontal="true"
            android:textOff="Z AXIS (OFF)"
            android:textOn="Z AXIS (ON)"/>

        <Button
            android:id="@+id/magBtn"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="GO!"
            android:layout_marginLeft="55dp"
            android:textAlignment="center"
            android:layout_marginBottom="17dp"
            android:background="@color/blue"/>



    </LinearLayout>
</ScrollView>